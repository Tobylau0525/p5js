<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.3/p5.js"></script>
    
    <script>
var backgroundColor;
var close;
 
function setup() {
   createCanvas(400, 400); //canvas size 
  
  
  backgroundColor = color(255, 255, 255);// default background color
}
 
function draw(){
  background(backgroundColor);//background color will be change if close is true 
 
  
  var distance = dist(mouseX, mouseY, 200, 200); // check distance between mouse and circle
  
  

  if(distance < 50) //if the distance is less than the circle's radius
  {
    close = true;//if it's true
  } else {//else
   close = false;//if it's not ture
  }
  ellipseMode(CENTER);
  if(close == true){//if close is true then fill black and show hand on cursor
    fill(50);//if close is true then fill black and show hand on cursor
    cursor(HAND);//if close is true then fill black and show hand on cursor
  } else {//if close is not true then fill white and show arrowon cursor
    fill(250); //if close is not true then fill white and show arrowon cursor
    cursor(ARROW); //if close is not true then fill white and show arrowon cursor
  }
  ellipse(200,200, 150, 150);//ellipse size
  
}
function mousePressed(){
  if(close == true){
    backgroundColor = color(random(255), random(255), random(255));//random background coloe when mouse press
  }
}

    </script>
</head>

<body>
    <div id="code" class="container-fluid">
        <script src="https://gist-it.appspot.com/github/yatchol6214/p5js/blob/gh-pages/conditionalproject.html?footer=0"></script>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
        $(window).bind("load", function() {
            $('#code').before($('#defaultCanvas0').remove());
        });
    </script>
</body>




</html>
